            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|left"
            android:layout_alignParentBottom="true">
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/betting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:visibility="visible">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="@drawable/bg_bet"
            android:layout_gravity="center_horizontal"
            android:gravity="center">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:text="0"
                    android:background="@drawable/bg_white"
                    android:id="@+id/playerBet"
                    android:textSize="22sp"
                    android:textColor="#ff000000"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <Button
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:id="@+id/clearButton"
                    android:text="CLEAR"
                    android:textSize="18sp"
                    android:textColor="#ffffffff"
                    android:textStyle="bold"
                    android:background="@drawable/bg_clear"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp">

                <Button
                    android:id="@+id/rebet"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:text="X2"
                    android:textColor="#ffffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_rebet" />
                <Button
                    android:id="@+id/bet_all"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="MAX BET"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_all" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp">

                <Button
                    android:id="@+id/bet_50"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/m50" />
                <Button
                    android:id="@+id/bet_10"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/m10" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp">

                <Button
                    android:id="@+id/bet_500"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/m500" />
                <Button
                    android:id="@+id/bet_100"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/m100" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/dealButton"
            android:layout_width="0dp"
            android:layout_height="89dp"
            android:layout_weight="3"
            android:textColor="#ffffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/bg_deal"
            android:text="DEAL CARD" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/playing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/standhit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_height="50dp"
                android:layout_width="100dp"
                android:layout_marginRight="30dp"
                android:id="@+id/standButton"
                android:text="STAND"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/bg_orange"
                android:visibility="invisible"/>

            <Button
                android:layout_height="50dp"
                android:layout_width="100dp"
                android:id="@+id/hitButton"
                android:text="HIT"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/bg_orange"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/splitdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/standhit">

            <Button
                android:layout_height="50dp"
                android:layout_width="100dp"
                android:layout_marginRight="30dp"
                android:id="@+id/splitButton"
                android:text="SPLIT"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/bg_turquoiseblue"
                android:visibility="gone"/>

            <Button
                android:layout_height="50dp"
                android:layout_width="100dp"
                android:id="@+id/ddButton"
                android:text="DOUBLE"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/bg_turquoiseblue"
                android:visibility="invisible"/>

        </LinearLayout>
    </RelativeLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/bonus"
        android:layout_toRightOf="@+id/playerCashView"
        android:background="@drawable/fukidasi_yellow"
        android:visibility="invisible"/>


</RelativeLayout>