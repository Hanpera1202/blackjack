<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp320_10dp"
    android:background="#121212">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center">

        <ImageView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp320_40dp"
            android:layout_marginBottom="@dimen/dp320_5dp"
            android:scaleType="centerInside"
            android:src="@drawable/congratiration"/>

        <TextView
            android:id="@+id/resultMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You got the prize."
            android:textSize="@dimen/dp320_20sp"
            android:textColor="#EDB94A"
            fontPath="fonts/Roboto-Bold.ttf"
            tools:ignore="MissingPrefix"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp320_10dp"
            android:textSize="@dimen/dp320_18sp"
            android:textColor="#D6D6D6"
            fontPath="fonts/Roboto-Bold.ttf"
            tools:ignore="MissingPrefix"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp320_100dp"
            android:layout_marginTop="@dimen/dp320_10dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/receive_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp320_10dp"
            android:text="The prize is already receiving."
            android:textSize="@dimen/dp320_20sp"
            android:textColor="#D7413C"
            fontPath="fonts/Roboto-Bold.ttf"
            tools:ignore="MissingPrefix"/>

        <Button
            android:id="@+id/positive_button"
            android:layout_width="@dimen/dp320_170dp"
            android:layout_height="@dimen/dp320_50dp"
            android:layout_marginTop="@dimen/dp320_10dp"
            android:text="Recieve the prize"
            android:textSize="@dimen/dp320_20sp"
            android:textColor="#D6D6D6"
            android:background="#D7413C"
            fontPath="fonts/Roboto-Bold.ttf"
            tools:ignore="MissingPrefix"/>

    </LinearLayout>

</RelativeLayout>