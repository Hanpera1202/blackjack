<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center|center"
        android:visibility="visible">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <Button
            android:id="@+id/game"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:onClick="onClickHeader"
            android:background="@drawable/btn_play"
            android:layout_below="@+id/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="You can apply to PRIZE COMPETITION\nusing the point you got in the blackjack game."
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="259dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/frame_prize"
            android:layout_below="@id/game"
            android:gravity="top|center">

            <Button
                android:id="@+id/competition"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/btn_apply"
                android:onClick="onClickHeader"/>

            <Button
                android:id="@+id/result"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_result"
                android:onClick="onClickHeader"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>