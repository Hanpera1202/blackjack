<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background = "@drawable/bg">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/playerCashView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_playercash">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/chip"/>

            <TextView
                android:id="@+id/playerCash"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_playercash">

            <Button
                android:id="@+id/game"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onClickHeader"
                android:background="@drawable/mydata" />

            <Button
                android:id="@+id/competition"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onClickHeader"
                android:background="@drawable/mydata" />

            <Button
                android:id="@+id/result"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onClickHeader"
                android:background="@drawable/mydata" />

            <Button
                android:id="@+id/checkMyData"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onClickHeader"
                android:background="@drawable/mydata" />

            <Button
                android:id="@+id/setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onClickHeader"
                android:background="@drawable/mydata" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/settingPush"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/header"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Push Notification"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_alignParentLeft="true" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/tglPush"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ToggleButton"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/settingSound"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/settingPush"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Push Notification"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_alignParentLeft="true" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/tglSound"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ToggleButton"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
